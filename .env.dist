# Microsoft Bot Framework Credentials (not needed when LOAD_TEST_MODE=true)
MicrosoftAppType=
MicrosoftAppId=
MicrosoftAppPassword=
MicrosoftAppTenantId=
WORKOFLOW_N8N_WEBHOOK_URL=
WORKOFLOW_FEEDBACK_WEBHOOK_URL=https://workflows.vcec.cloud/webhook/a887e442-2c85-4193-b127-24408eaf8b11
# Enable/disable daily feedback collection (true/false)
FEEDBACK_ENABLED=true
N8N_BASIC_AUTH_USERNAME=
N8N_BASIC_AUTH_PASSWORD=
# Magic Link Configuration (DEPRECATED - Use API approach below)
MAGIC_LINK_SECRET=your-very-secret-key-change-this-in-production-minimum-32-chars
MAGIC_LINK_DOMAIN=http://localhost:3979

# Workoflow Registration API Credentials (NEW - Recommended)
# These credentials are used for the /api/register endpoint
WORKOFLOW_API_USER=your_api_username
WORKOFLOW_API_PASSWORD=your_api_password
AZURE_OPENAI_ENDPOINT="https://patrickschoenfeld-4463-resource.cognitiveservices.azure.com"
AZURE_OPENAI_API_KEY=""
AZURE_OPENAI_DEPLOYMENT="gpt-5-mini"
AZURE_OPENAI_API_VERSION="2024-05-01-preview"
# GPT-5-mini reasoning effort: 'low' (fast), 'medium' (balanced), 'high' (complex reasoning)
# With ~130 tools, 'medium' is recommended for better tool selection and accuracy
AZURE_OPENAI_REASONING_EFFORT="medium"

# Logging options for Azure OpenAI proxy
LOG_FULL_REQUEST=false
LOG_FULL_RESPONSE=false
LOG_TOOL_ARGUMENTS=false
SHOW_COST_ESTIMATE=false

# Request size limit for OpenAI proxy routes (e.g., '10mb', '50mb', '100mb')
# Increase this if you get 413 Payload Too Large errors
REQUEST_SIZE_LIMIT=10mb

# Phoenix Observability Configuration
# Enable/disable Phoenix tracing (true/false)
PHOENIX_ENABLED=true

# Phoenix collector endpoint
# For local Phoenix: http://localhost:6006 (Phoenix UI port, used with HTTP)
# For Docker Phoenix: http://phoenix:6006
# For Phoenix Cloud: https://app.phoenix.arize.com
# Note: The /v1/traces path is automatically appended
PHOENIX_COLLECTOR_ENDPOINT=http://localhost:6006

# Project name in Phoenix dashboard
PHOENIX_PROJECT_NAME=workoflow-bot

# Optional: Enable debug logging for troubleshooting (true/false)
# PHOENIX_DEBUG=false

# Optional: Test connection on startup (true/false)
# PHOENIX_TEST_CONNECTION=false

# Optional: API key for Phoenix Cloud or authenticated self-hosted instances
# PHOENIX_API_KEY=

# Load testing mode - Set to true to skip Bot Framework replies (for load testing)
LOAD_TEST_MODE=false

# API key for load testing (required when LOAD_TEST_MODE=true)
# Generate a secure key: openssl rand -hex 32
LOAD_TEST_API_KEY=
